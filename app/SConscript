Import( 'AvTranscoder' )
Import( 'AvTranscoder_jar' )

env = Environment().Clone()

Import( 'env' )

env.Program(
        'avmeta',
        Glob( 'avMeta/*.cpp' ),
        LIBS = [
                AvTranscoder,
                'avutil',
                'avformat',
                'avcodec',
                'swscale',
                ]
        )

env.Program(
        'av++',
        Glob( 'avTranscoder/*.cpp' ),
        LIBS = [
                AvTranscoder,
                'avutil',
                'avformat',
                'avcodec',
                'swscale',
                ]
        )
